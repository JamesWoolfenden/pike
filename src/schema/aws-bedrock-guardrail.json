          "minItems": 1,
          "type": "array"
        }
      },
      "required": [
        "FiltersConfig"
      ],
      "type": "object"
    },
    "FilterStrength": {
      "description": "Strength for filters",
      "enum": [
        "NONE",
        "LOW",
        "MEDIUM",
        "HIGH"
      ],
      "type": "string"
    },
    "GuardrailStatus": {
      "description": "Status of the guardrail",
      "enum": [
        "CREATING",
        "UPDATING",
        "VERSIONING",
        "READY",
        "FAILED",
        "DELETING"
      ],
      "type": "string"
    },
    "ManagedWordsConfig": {
      "additionalProperties": false,
      "description": "A managed words config.",
      "properties": {
        "InputAction": {
          "$ref": "#/definitions/WordAction"
        },
        "InputEnabled": {
          "type": "boolean"
        },
        "OutputAction": {
          "$ref": "#/definitions/WordAction"
        },
        "OutputEnabled": {
          "type": "boolean"
        },
        "Type": {
          "$ref": "#/definitions/ManagedWordsType"
        }
      },
      "required": [
        "Type"
      ],
      "type": "object"
    },
    "ManagedWordsType": {
      "description": "Options for managed words.",
      "enum": [
        "PROFANITY"
