        },
        "Enabled": {
          "type": "boolean"
        },
        "Threshold": {
          "description": "The threshold for this filter.",
          "minimum": 0,
          "type": "number"
        },
        "Type": {
          "$ref": "#/definitions/ContextualGroundingFilterType"
        }
      },
      "required": [
        "Threshold",
        "Type"
      ],
      "type": "object"
    },
    "ContextualGroundingFilterType": {
      "description": "Type of contextual grounding filter",
      "enum": [
        "GROUNDING",
        "RELEVANCE"
